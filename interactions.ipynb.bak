```{python}
x = np.linspace(-10, 10)

X0, X1 = np.meshgrid(x, x)

fig = plt.figure()
ax = fig.add_subplot(111, projection="3d")
ax.view_init(elev=20, azim=45)


def update_lm(b0, b1, b2):
    ax.clear()
    Y = X0 * b0 + X1 * b1 + b2 * (X0 * X1)
    line = ax.plot_wireframe(X0, X1, Y, rstride=5, cstride=5)
    ax.set_zlim(-100, 100)
    ax.set_xticks([-10, 0, 10])
    ax.set_yticks([-10, 0, 10])
    ax.set_zticks([-100, -50, 0, 50, 100])
    ax.set_xlabel(r"$x_0$")
    ax.set_ylabel(r"$x_1$")
    ax.set_zlabel(r"$\mu$")


interact(
    update_lm,
    b0=FloatSlider(min=-5, max=5, step=0.1, value=0),
    b1=FloatSlider(min=-5, max=5, step=0.1, value=0),
    b2=FloatSlider(min=-1, max=1, step=0.1, value=0),
);
```


